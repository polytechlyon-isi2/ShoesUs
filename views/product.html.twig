{% extends "layout.html.twig" %}

{% block title %}{{ product.name }}{% endblock %}

{% block content %}
<p>
    <img src="{{ app.request.basepath }}{{ product.image }}" alt="{{ product.name }}" class="img-responsive center-block">
    <div class="container">
        <div class="jumbotron">
            <h2>{{ product.name }}</h2>
            <p>{{ product.desc }}</p>
            <p>{{ product.price }}</p>
            <h3>Ajouter au panier</h3>
            {% if app.user and is_granted('IS_AUTHENTICATED_FULLY') %}
                 <a href="{{ path('bag_product_add', { 'id':product.id }) }}" class="btn btn-info btn-xs" title="add">Ajouter au panier <span class="glyphicon glyphicon-plus"></span></a>
            {% else %}
                <a href="{{ path('login') }} ">Se connecter</a> pour ajouter au panier.
            {% endif %}
        </div>
    </div>
</p>
{% endblock %}