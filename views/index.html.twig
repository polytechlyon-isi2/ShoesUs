{% extends "layout.html.twig" %}

{% block title %}Home{% endblock %}

{% block content %}
<h1><img class="img-responsive center-block" src="{{ app.request.basepath }}/images/index_background.png"></h1>
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <div class="jumbotron center-block">
                {% for category in categories %}
                    <p><a class="categoryName" href="{{ path('category', { 'id': category.id }) }}">{{ category.name }}</a></p>
                {% endfor %}
            </div>
        </div>
        <div class="col-md-4">
        </div>
        <div class="col-md-4">
            <div class="jumbotron">
                <a class="categoryName" href="{{ path('product', { 'id': 1 }) }}">999 New Balance</a>
                <img class="img-responsive center-block" src="{{ app.request.basepath }}/images/nb_999.png">
            </div>
        </div>
    </div>
</div>
{% endblock %}